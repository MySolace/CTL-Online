.checkbox, .radio {
  display: inline-block;
  font-weight: 400;
	cursor:      pointer;
  margin:      10px 0;
  &:before {
    background-color: $light-gray;
    border-radius:    3px;
    box-shadow:       inset 0px 2px 3px 0px rgba(0, 0, 0, .3), 0px 1px 0px 0px rgba(255, 255, 255, .8);
    color:            #F3F3F3;
    content:          "";
    display:          inline-block;
    height:           18px;
    margin-right:     3%;
    text-align:       center;
    vertical-align:   middle;
    width:            18px;
  }
}

.checkbox {
  &:before {
    border-radius: 3px;
  }
}

.radio {
  &:before {
    border-radius: 10px;
  }
}

