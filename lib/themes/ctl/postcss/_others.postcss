// Templates
////////////////////////////////////////////////////////////////////////////////

.template--base {
  border: 1px solid #e7e7e7;
  color: $dark-gray;
  height: 664px;
  width: 1180px;
  padding: 40px;
  overflow: hidden;
  position: relative;

  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -100px;
    margin-left: -200px;
  }

  .half {
    width: 48%;
    float: left;

    &:first-of-type {
      padding-right: 2%;
    }
  }

  .third {
    float: left;
    width: 32%;
    margin: 0 auto;
    padding-right: 1%;
    text-align: center;
    img {
      padding-bottom: 20px;
    }
    &:last-of-type {
      padding-right: 0;
    }
  }

  .half--centered {
    width: 50%;
    margin: 0 auto;
  }

  .full-width {
    width: 100%;
    text-align: center;
    margin-top: 40px;
  }
}

.slide-actions {
  border: 1px solid #e7e7e7;
  background-color: #e7e7e7;
  height: 65px;
  width: 1180px;
  padding: 10px;
  text-align: center;
  .slide-actions__btn-group {
    span {
      color: darken($dark-gray, 5%);
      display: inline-block;
      font-size: 40px;
      margin: 0 auto;
      text-align: center;
      padding: 0 20px;
      &:hover {
        cursor: pointer;
        color: $brand-primary;
      }
    }
  }
}

.closed-caption {
  background-color: $white;
  border:           1px solid #E7E7E7;
  border-top:       0;
  height:           200px;
  padding:          20px;
  width:            1180px;
}

// Title Page
////////////////////////////////////////////////////////////////////////////////

.template--title-page {
  background-color: $brand-primary;
  text-align:       center;
  .lesson__module-name {
    background-color: $brand-primary-dark;
    color:            $brand-primary;
    display:          inline-block;
    font-style:       italic;
    font-weight:      $weight-black;
    letter-spacing:   0.3rem;
    padding:          10px 15px;
    text-transform:   uppercase;
  }
  .titles {
    text-align: center;
    top: 30%;
    margin: 0 auto;
    position: relative;
    z-index: 200;
    span {
      color: $brand-primary-dark;
      mix-blend-mode: multiply;
      font-size: 26px;
    }
    h2.lesson__title {
      color: $white;
      line-height: 7rem;
      padding: 0 20px;
    }
  }
  img {
    height: 400px;
    margin-top: -115px;
    position: relative;
    z-index: 100;
  }
}

// Internal Lesson Pages
////////////////////////////////////////////////////////////////////////////////

.template--internal-page {
  background-color: #fafafa;

  .titles {
    h1 {
      color: $dark-gray;
    }
    &:after {
      border-top: 10px solid $brand-primary;
      content: ' ';
      color: #fff;
      display: block;
      margin: 20px 0;
      width: 10%;
    }

    .page__subtitle {
      color: #A5A5A5;
      font-size: 30px;
      font-style: italic;
      font-weight: $weight-normal;
      line-height: 25px;
    }
  }

  h2, h3 {
    color: $brand-primary;
  }

  q.pull-quote {
    padding-bottom: 50px;
  }

  cite {
    display: inline-block;
    text-align: center;
    width: 100%;
  }

  .image {
    height: 450px;
    overflow: hidden;
  }

  .video {
    text-align: center;
    width: 100%;
  }
}

.template--full-background {
  background-image: url('http://www.placecage.com/1200/680');
  background-size: cover;
  background-position: center;
}

.template--full-video {
  padding: 0;
}

// Quiz Page
////////////////////////////////////////////////////////////////////////////////

.template--quiz__titles {
  background-color: $black;
  .lesson__module-name {
    background-color: $blue;
    mix-blend-mode: none;
    color: $white;
  }
  .titles {
    span {
      color: $blue;
    }
  }
}

.template--quiz {
  .lesson__module-name {
    background-color: $blue;
    mix-blend-mode: none;
    color: $white;
  }
  .titles {
    .quiz__title {
      font-size: $large-font-size;
    }
    &:after {
      border-top: 10px solid $blue;
    }
  }
  .content {
    form {
      margin-top: 30px;
      margin-left: 40px;
    }
    .quiz__submit {
      bottom: 50px;
      left: 43%;
      display: inline-block;
      position: absolute;
    }
  }
}

.template--quiz__answer {
  .answer-title {
    color: $dark-gray;
    display: inline-block;
    font-family: $font-family-decorative;
    font-size: 20px;
    font-weight: $weight-light;
    letter-spacing: .4rem;
    padding-top: 20px;
    text-transform: uppercase;
    width: 100%;
  }

  .answer {
    color: $blue;
    display: inline-block;
    font-size: $large-font-size;
    font-weight: $weight-bold;
    width: 100%;
  }

  .correct-answer {
    color: rgb(52, 163, 52);
  }

  blockquote {
    bottom: 20px;
    border-left: 5px solid $blue;
    margin-top: 50px;
    position: absolute;
  }
}














.page--patterns {

  .row {
    border-bottom: 1px solid #eaeaea;
