    height: 200px;
    width: auto;
  }

  .color-block--red {
    background-color: $brand-primary;
  }

  .color-block--black {
    background-color: $black;
  }

  .color-block--brand-gray {
    background-color: $brand-gray;
  }

  .color-block--blue {
    background-color: $blue;
