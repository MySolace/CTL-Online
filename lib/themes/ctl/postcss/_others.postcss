.message {
  background-color: $blue;
  border:           1px solid darken($blue, 10%);
  border-radius:    3px;
  margin-bottom:    24px;
  padding:          18px 24px;
  position:         relative;

  .message-inner {
    color:     $off-white;
    font-size: 20px;
    margin:    0;
    max-width: 85%;
    .message-icon {
      color:        $white;
      font-size:    24px;
      margin-right: 10px;
    }
  }

  button {
    background-color: transparent;
    color:            lighten($blue, 10%);
    padding:          0;
    position:         absolute;
    right:            24px;
    top:              10px;
    &:hover {
      color: lighten($brand-primary, 20%);
    }
  }
}

.message--error {
  background-color: $brand-primary-dark;
  border:           1px solid darken($brand-primary-dark, 5%);

  .message-inner {
    color: $off-white;
    .message-icon {
      color: $white;
    }
  }

  button {
    background-color: transparent;
    color:            $brand-primary;
    &:hover {
      color: lighten($brand-primary, 20%);
    }
  }
}

.message--warning {
  background-color: #BAD320;
  border:           1px solid darken(#BAD320, 10%);

  .message-inner {
    color: $off-white;
    .message-icon {
      color: $white;
    }
  }

  button {
    background-color: transparent;
    color:            lighten(#BAD320, 10%);
    &:hover {
      color: lighten($brand-primary, 20%);
    }
  }
}






.z-300 {
  z-index: 300;
  position: relative;
}

.slide {
  img {
    margin: 0 auto;
    display: block;
  }
  > div {
    height: 100%;
    > div {
      height: 100%;
    }
  }
  @extend .template--base;

  &:not(:first-child) {
    @extend .template--internal-page;

    h1 {

    }

    h2 {
      @extend .page__subtitle;
    }

    p {
      @extend .large;
    }

    .titles {
      margin-top: -40px;
    }
  }

  &:first-child {
    @extend .template--title-page;

    h1 {
      @extend .lesson__module-name;
      font-size: 1em;
      margin: 0;
    }

    h2 {
      @extend span;
      @extend span.intro;
      @extend .z-300;
    }

    h3 {
      @extend .lesson__title;
      @extend h2.lesson__title;
      @extend .z-300;
    }

    .titles {
      top: 20%;
      &:after {
        @extend img;
        background:   url('../images/speech-bubble-01.svg');
        content:      ' ';
        display:      block;
        margin-left:  auto;
        margin-right: auto;
        margin-top:   -27.5%;
        width:        400px;
      }
    }
  }

}

